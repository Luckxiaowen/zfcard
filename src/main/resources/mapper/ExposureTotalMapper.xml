<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zf.mapper.ExposureTotalMapper">

    <resultMap id="BaseResultMap" type="com.zf.domain.entity.ExposureTotal">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="createBy" column="create_by" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="visitorTotal" column="visitor_total" jdbcType="BIGINT"/>
            <result property="clientTotalNum" column="client_total_num" jdbcType="BIGINT"/>
            <result property="sevenTotal" column="seven_total" jdbcType="BIGINT"/>
            <result property="dayTotal" column="day_total" jdbcType="BIGINT"/>
            <result property="dayDownloadNum" column="day_download_num" jdbcType="BIGINT"/>
            <result property="dayNotes" column="day_notes" jdbcType="BIGINT"/>
            <result property="dayAddContact" column="day_add_contact" jdbcType="BIGINT"/>
            <result property="dayAddClient" column="day_add_client" jdbcType="BIGINT"/>
            <result property="weekAddClient" column="week_add_client" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,create_by,create_time,
        update_time,visitor_total,client_total_num,
        seven_total,day_total,day_download_num,
        day_notes,day_add_contact,day_add_client,
        week_add_client
    </sql>
    <select id="selectSevenDayByExposureTotal" resultType="java.lang.Integer">

        select expo_snapshot.day_total as 'dayVisitorNum',
        DATE_FORMAT(create_time,'%Y-%m-%d') AS 'create_time'
        FROM expo_snapshot
        where
        expo_total_id =#{expoTotalId}
        AND
        DATE_FORMAT(create_time,'%Y-%m-%d')IN
        <foreach collection="sevenDate" item="sevenDate" separator="," open="(" close=")">
            #{sevenDate}
        </foreach>
        Group BY
        DATE_FORMAT(create_time,'%Y-%m-%d')
        Order By
        DATE_FORMAT(create_time,'%Y-%m-%d') desc;
    </select>
    <select id="selectListById" resultType="com.zf.domain.vo.ExposureVo" resultMap="BaseResultMap">
        SELECT
               es.day_total,
               es.average_stay_min,
               es.stay_num,
               es.day_download_num,
               es.day_add_client,
               es.day_notes_num
        FROM expo_snapshot es
        WHERE expo_total_id=11
    </select>
</mapper>
